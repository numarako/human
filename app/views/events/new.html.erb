<% provide(:title, "カレンダー追加") %>
<% provide(:button_text, '新規追加') %>
<h1>カレンダー追加</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @event, url: create_events_path, local: true) do |f| %>
      
<%= render 'shared/error_messages', object: f.object %>

  <%= f.label :date, "日付" %>
  <%= f.text_field :date, class: 'form-control' %>

  <%= f.label :mind, "ココロ" %>
  <%= f.select :mind, Event.minds.keys.map {|k| [I18n.t("enums.event.mind.#{k}"), k]}, {}, {class: 'form-control'}  %>

  <%= f.label :reason, "理由" %>
  <%= f.text_area :reason, rows: "3", cols: "80", class: 'form-control' %>

  <%= f.label :small_success, "小さな成功体験" %>
  <%= f.text_area :small_success, rows: "3", cols: "80", class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
   </div>  
</div>
