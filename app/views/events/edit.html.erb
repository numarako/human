<% provide(:title, "カレンダー変更") %>
<% provide(:button_text, '更新する') %>
<h1>カレンダー変更</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @event, local: true) do |f| %>
      
<%= render 'shared/error_messages', object: f.object %>

  <%= f.label :date, "日付" %>
  <%= f.text_field :date, class: 'form-control' %>

  <%= f.label :mind, "ココロ" %>
  <%= f.select :mind, Event.minds.keys.map {|k| [I18n.t("enums.event.mind.#{k}"), k]}, {}, {class: 'form-control'}  %>

  <%= f.label :reason, "理由" %>
  <%= f.text_area :reason, rows: "3", cols: "80", class: 'form-control' %>

  <%= f.label :small_success, "小さな成功体験" %>
  <%= f.text_area :small_success, rows: "3", cols: "80", class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
    <%=link_to(event_path(@event), method: :delete, data: { confirm: "本当に削除しますか?" }, class:"link_to_button") do %>
      <button type="button" name="button" class="btn btn-danger form-control">削除する</button>
    <% end %>
  </div>  
</div> 
