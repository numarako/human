<% provide(:title, "カレンダー変更") %>
<% provide(:button_text, '更新する') %>
<% provide(:url, event_path) %>
<h1>カレンダー変更</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <%=link_to(event_path(@event), method: :delete, data: { confirm: "本当に削除しますか?" }, class:"link_to_button") do %>
      <button type="button" name="button" class="btn btn-danger form-control">削除する</button>
    <% end %>
  </div>
</div> 
