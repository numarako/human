<h1>検索</h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= search_form_for @q, url: search_path do |f| %>

      <%= f.label :title_cont, 'タイトル' %>
      <%= f.search_field :title_cont, class: 'form-control' %>

      <%= f.label :situation_cont, '本文' %>
      <%= f.search_field :situation_cont, class: 'form-control' %>

      <%= f.label :user_age_eq, '年齢' %>
      <%= f.select :user_age_eq, User.ages.keys.map {|k| [I18n.t("enums.user.age.#{k}"), k]}, {}, {class: 'form-control'}  %>

      <%= f.label :user_gender_eq, '性別' %>
      <%= f.select :user_gender_eq, User.genders.keys.map {|k| [I18n.t("enums.user.gender.#{k}"), k]}, {}, {class: 'form-control'}  %>

      <%= f.submit '検索' , class: "btn btn-primary" %>
    <% end %>
   </div>
</div>

