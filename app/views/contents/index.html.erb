<% provide(:title, "投稿管理") %>
<h1>過去投稿</h1>
<% if @contents.any? %>
   <div class="container">
    <div class= "table-responsive">
      <table class = "table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>#</th>
            <th>タイトル</th>
            <th>感情</th>
            <th>スコア</th>
            <th>作成日</th>
            <th>最終更新日</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @contents.each_with_index do |content, i| %>
            <%= render partial: 'my_content', locals: { content: content, i: i } %>
          <% end %> 
        </tbody>
      </table>
    </div>
    <%= paginate @contents %>
  </div>
</div>
<% else %>
  <h2><%= '過去投稿がありません' %></h2>
<% end %>
