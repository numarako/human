<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with(model: @content, local: true) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.label :title, 'タイトル' %>
    <%= f.text_area :title, rows: "1", cols: "80", class: "form-control", placeholder: "負の感情体験のタイトル", maxlength: 50	%>

    <%= f.label :emotions, '感情' %>
    <%= f.select :emotions, Content.emotions.keys.map {|k| [I18n.t("enums.content.emotions.#{k}"), k]}, {}, {class: 'form-control'} %>

    <%= f.label :score, 'スコア' %>
    <%= f.number_field :score, rows: "1", cols: "10", class: "form-control", placeholder: "負の感情の程度に"1~100"の点数をつけてください, min: 1, max: 100 %>

    <%= f.label :journaling, 'ジャーナリング' %>
    <%= f.text_area :journaling, rows: "10", cols: "80", class: "form-control", placeholder: "1~3分間集中して、心に浮かんだことをひたすら書き出してください", maxlength: 500 %>

    <%= f.label :situation, '状況整理' %>
    <%= f.text_area :situation, rows: "10", cols: "80", class: "form-control", placeholder: "負の感情体験の状況を他者に伝わるように説明してください", maxlength: 500 %>

    <%= f.label :compassion, 'セルフ・コンパッション' %>
    <%= f.text_area :compassion, rows: "10", cols: "80", class: "form-control", placeholder: "親友や大切な人に接するつもりで、自分に対して慈悲の言葉を投げかけてください", maxlength: 500 %>

    <%= f.label :status, '公開設定' %>
    <%= f.select :status, Content.statuses.keys.map {|k| [I18n.t("enums.content.status.#{k}"), k]}, {}, {class: 'form-control'} %>

    <%= f.submit yield(:button_text), class: "btn btn-success" %>
    <% end %>
  </div>  
</div>
